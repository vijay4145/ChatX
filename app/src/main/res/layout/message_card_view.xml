<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <TextView
        android:id="@+id/messages_frm_receiver_in_message_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/receive_bubble_shape"
        android:padding="4dp"
        android:layout_margin="2dp"
        android:layout_gravity="start"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="italic" />
    <TextView
        android:id="@+id/messages_frm_sender_in_message_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/send_bubble_shape"
        android:padding="4dp"
        android:layout_margin="2dp"
        android:layout_gravity="end"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="italic" />









</androidx.cardview.widget.CardView>